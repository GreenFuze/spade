{
  "name": "npm-complex-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "High complexity npm monorepo with multiple languages and cross-language dependencies",
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/*",
    "libs/*",
    "modules/*",
    "tools/*",
    "aggregators/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "build-all": "npm run build",
    "test-all": "npm run test"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  }
}
